---
// src/pages/showcase.astro
import Layout from "@/layouts/Layout.astro";
import Banner from "@/sections/Banner.astro";
import Footer from "@/sections/Footer.astro";
import Header from "@/sections/Header.astro";
import { getLandingData } from "@/services/data.service";

const data = await getLandingData();

const headerData = {
  logo: "Showcase",
  links: [
    { label: "Beranda", href: "/" },
    { label: "Docs", href: "/docs" },
    { label: "Team", href: "/team" },
    { label: "Unduh", href: "/#download" },
    { label: "Kontribusi", href: "/kontribusi" },
  ],
};

const youtubeVideoId = "SAMPLE"; //FIXME -  Replace with actual YouTube video ID
---

<Layout meta={data.meta}>
  <Header showBackButton={true} data={headerData} />

  <main class="bg-white pt-20">
    <!-- Hero Section -->
    <section class="max-w-6xl mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Demonstrasi AmalanKu
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Lihat bagaimana AmalanKu dapat membantu meningkatkan ibadah harian Anda
      </p>
    </section>

    <!-- Video Player Section -->
    <section class="max-w-4xl mx-auto px-6 pb-16">
      <div class="aspect-w-16 aspect-h-9 rounded-xl overflow-hidden shadow-xl">
        <iframe
          class="w-full h-full"
          src={`https://www.youtube.com/embed/${youtubeVideoId}?autoplay=0&rel=0`}
          title="Demonstrasi AmalanKu"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </section>

    <!-- Features Showcase -->
    <section class="max-w-6xl mx-auto px-6 py-16 bg-gray-50">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Fitur Unggulan
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
          <div
            class="w-12 h-12 bg-primary-100 rounded-lg mb-4 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Pengingat Ibadah
          </h3>
          <p class="text-gray-600">
            Dapatkan notifikasi tepat waktu untuk shalat, dzikir, dan ibadah
            lainnya
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
          <div
            class="w-12 h-12 bg-primary-100 rounded-lg mb-4 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Pelacakan Konsisten
          </h3>
          <p class="text-gray-600">
            Pantau perkembangan ibadah Anda dengan statistik yang jelas
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
          <div
            class="w-12 h-12 bg-primary-100 rounded-lg mb-4 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Komunitas Muslim
          </h3>
          <p class="text-gray-600">
            Terhubung dengan komunitas untuk saling mendukung dalam beribadah
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="max-w-4xl mx-auto px-6 py-16 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">
        Siap meningkatkan ibadah Anda?
      </h2>
      <div class="flex flex-col sm:flex-row justify-center gap-4 mt-8">
        <a
          href="/#download"
          class="px-8 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          Gabung Sekarang
        </a>
        <a
          href="/"
          class="px-8 py-3 bg-white text-gray-800 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors"
        >
          Pelajari Lebih Lanjut
        </a>
      </div>
    </section>
  </main>

  <Banner
    id="note-banner"
    type="error"
    title="AmalanKu sedang dibangun bersama komunitas"
    description="Bergabunglah dengan para developer dan kontributor lainnya untuk mewujudkan aplikasi amalan Islam terbaik. Setiap kontribusi Anda sangat berharga!"
    cta="Gabung Sekarang"
    url="/kontribusi"
    newPage={false}
  />
  <Footer data={data.footerData} />
</Layout>

<style>
  /* Responsive aspect ratio for video */
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
  }
  .aspect-h-9 iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
