---
import IconWrapper from "@/components/IconWrapper.astro";
import { ASSET_PREFIX } from "@/config/constants";
import type { Feature } from "@/config/landing.interface";

interface Props {
  data: Feature;
  reversed: boolean;
}

const { data, reversed } = Astro.props;
---

<article
  class=`flex justify-between gap-x-32 flex-col mb-20 md:mb-40 ${reversed ? "md:flex-row-reverse" : "md:flex-row"}`
>
  <div class="md:w-3/4 flex items-center justify-center">
    <img
      src={ASSET_PREFIX + data.img}
      alt={data.imageAlt}
      class="h-auto max-h-full transition-transform duration-300 hover:scale-125 cursor-zoom-in"
    />
  </div>

  <div class="flex flex-col md:w-5/6 gap-y-8">
    <h3
      class="text-xl md:text-4xl transition-transform duration-300 ease-in-out hover:scale-[1.15] cursor-pointer"
    >
      {data.title}
    </h3>
    <p class="md:text-xl">{data.description}</p>
    <ul class="flex flex-col gap-y-8">
      {
        data.items.map((item) => (
          <li class="flex flex-row items-center gap-x-4 md:text-2xl transition-transform duration-300 ease-in-out hover:scale-[1.15] cursor-pointer">
            <IconWrapper>{item.icon}</IconWrapper>
            {item.name}
          </li>
        ))
      }
    </ul>
  </div>
</article>
